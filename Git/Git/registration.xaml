<Window x:Class="Git.registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Git"
        mc:Ignorable="d"
        Title="registration" Height="550" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="296">
            <TextBlock Text="Введите почту:"/>
            <TextBox Name="Mail"/>

            <TextBlock Text="Введите логин:"/>
            <TextBox Name="Log"/>
            <TextBlock Text="Введите пароль:"/>
            <TextBox Name="Par"/>
            <TextBlock Text="Подтвердите пароль:"/>
            <TextBox Name="Par2"/>
            <RadioButton Content="Я старше 18 лет"/>
            <Button Content="РЕГИСТРАЦИЯ"/>
        </StackPanel>
    </Grid>
</Window>
